#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)


[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

# environment dependent files
[[ -f ~/.this/Xresources ]] && xrdb -merge -I$HOME ~/.this/Xresources

[[ -x ~/.this/screenlayout/default.sh ]] && ~/.this/screenlayout/default.sh


pulseaudio --start

xset r rate 250 50
xset b off
xset -dpms

setxkbmap fr
setxkbmap -option caps:escape


if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

# combine global & local configuration files for i3
# generate i3/config
echo "# !!! DO NOT EDIT THIS FILE !!!\n# this file is automatically generated by xinitrc, by combining both local and global configurations" > ~/.i3/config.generated
[[ -f ~/.i3/config ]] && cat ~/.i3/config >> ~/.i3/config.generated
[[ -f ~/.this/i3/config ]] && cat ~/.this/i3/config >> ~/.i3/config.generated

# generate i3/i3status.conf
echo "# !!! DO NOT EDIT THIS FILE !!!\n# this file is automatically generated by xinitrc, by combining both local and global configurations" > ~/.i3/i3status.conf.generated
[[ -f ~/.i3/i3status.conf ]] && cat ~/.i3/i3status.conf >> ~/.i3/i3status.conf.generated
[[ -f ~/.this/i3/i3status.conf ]] && cat ~/.this/i3/i3status.conf >> ~/.i3/i3status.conf.generated


exec i3 -c ~/.i3/config.generated
