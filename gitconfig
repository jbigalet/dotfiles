[color]
	ui = true
	branch = always
	diff = always
	status = true
[core]
	autocrlf = input
[fetch]
	prune = true
[url "https://"]
	insteadOf = git://
[filter "update-local-branch"]
  clean = "sed \"s/= .* # local/= -toreplace- # local/\""
  smudge = "sed \"s/= .* # local/= $(cat /etc/hostname) # local/\""
